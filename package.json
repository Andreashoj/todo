{
  "name": "anho-todo",
  "version": "1.2.0",
  "description": "A simple CLI todo application built with Node.js and TypeScript",
  "main": "dist/index.js",
  "bin": {
    "todo": "dist/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andreashoj/todo.git"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "watch": "nodemon --exec ts-node src/index.ts",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "prepack": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "todo",
    "cli",
    "typescript",
    "node"
  ],
  "author": "Andreas Hoj",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "type": "commonjs",
  "devDependencies": {
    "@types/node": "^24.5.2",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "commander": "^14.0.1"
  }
}
